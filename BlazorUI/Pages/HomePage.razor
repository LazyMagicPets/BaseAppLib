@namespace BlazorUI
@page "/HomePage"
@inherits LzComponentBaseInjectViewModel<ICurrentSessionViewModel>

<MudPaper Height="400px" Width="600px">
    <MudContainer Fixed="true">

        @if (ViewModel!.IsSignedIn)
        {
            <h1>Welcome, @ViewModel!.AuthProcess.Login</h1>
        }
        else
        {
            <h1>Hi there, lets get connected!</h1>
        }
        <LzAuth ViewModel="@ViewModel!.AuthProcess" />

    </MudContainer>
</MudPaper>

@code {

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Any additional logic to run after the component has rendered for the first time
            await Task.Delay(0); // Simulate async work if needed
        }
        await base.OnAfterRenderAsync(firstRender);
    }   
}